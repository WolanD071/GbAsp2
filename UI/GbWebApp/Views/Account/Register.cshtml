@model GbWebApp.Domain.ViewModels.RegisterViewModel
@{ ViewBag.Title = "Register"; }

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="signup-form">
                    <h2>New User Signup!</h2>
                    <form asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="UserName" placeholder="Name" />
                        <span asp-validation-for="UserName"></span>
                        <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password"></span>
                        <input asp-for="PasswordConfirm" placeholder="Password again" />
                        <span asp-validation-for="PasswordConfirm"></span>
                        <button type="submit" class="btn btn-default" style="width: 100%; margin: 10px 0;">what's the hell are you waiting for...</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
