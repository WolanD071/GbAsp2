@{ ViewBag.Title = "web API new... "; }

<div class="container">
    <h4>Create New Value</h4>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="NewVal" method="post">
                <div class="form-group">
                    <label class="control-label">value</label>
                    <input type="text" name="value" required class="form-control" />
