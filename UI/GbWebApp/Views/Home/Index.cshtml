@using GbWebApp.Infrastructure.Interfaces
@using GbWebApp.Infrastructure.Mappers
@inject IProductData productData

@{
    ViewBag.Title = "Main ";
    var products = productData.GetProducts().OrderBy(p => p.Id).Take(3).ToView();
}

<partial name="Partial/_Slider" />

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="../Shared/Partial/_LeftSideBar" />
            </div>
            <div class="col-sm-9 padding-right">
                <partial name="Partial/_Featured" model="products" />
                <partial name="Partial/_CategoryTab" />
                <partial name="Partial/_Recommended" />
            </div>
        </div>
    </div>
</section>