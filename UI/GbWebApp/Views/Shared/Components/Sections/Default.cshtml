@model IEnumerable<GbWebApp.Domain.ViewModels.SectionViewModel>
<div class="panel-group category-products" id="accordian">
    <h2>Category</h2>
    @foreach (var parent_section in Model.Where(p => p.TotalProdCnt > 0))
    {
        if (parent_section.ChildSections.Count > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@parent_section.GetHashCode()">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                        </a>
                        <a asp-controller="Shop" asp-action="Index" asp-route-SectionId="@parent_section.Id">@parent_section.Name</a>
                    </h4>
                </div>
                <div id="@parent_section.GetHashCode()" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var child_section in parent_section.ChildSections.Where(c => c.TotalProdCnt > 0))
                            {
                                <li><a asp-controller="Shop" asp-action="Index" asp-route-SectionId="@child_section.Id">@child_section.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a asp-controller="Shop" asp-action="Index" asp-route-SectionId="@parent_section.Id">@parent_section.Name</a></h4>
                </div>
            </div>
        }
    }
</div>